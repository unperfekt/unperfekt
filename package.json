{
  "name": "unperfekt-monorepo",
  "private": true,
  "homepage": "https://github.com/unperfekt/unperfekt#readme",
  "bugs": {
    "url": "https://github.com/unperfekt/unperfekt/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unperfekt/unperfekt.git"
  },
  "author": "Martin Broder <hello@martinbroder.com> (https://martinbroder.com)",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "check": "turbo run check",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write .",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "preview": "turbo run preview --parallel",
    "release": "auto shipit",
    "test": "turbo run test"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.{js,ts,svelte}": "eslint --cache --fix",
    "*.{js,ts,css,svelte,md,json}": "prettier --write"
  },
  "devDependencies": {
    "auto": "^10.32.6",
    "commitlint": "^16.2.1",
    "commitlint-config-unperfekt": "workspace:*",
    "eslint": "^8.10.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "prettier-config-unperfekt": "workspace:*",
    "sort-package-json": "^1.54.0",
    "turbo": "^1.1.4"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "pnpm@6.29.1"
}
