{
  "name": "unperfekt-monorepo",
  "private": true,
  "homepage": "https://github.com/unperfekt/unperfekt#readme",
  "bugs": {
    "url": "https://github.com/unperfekt/unperfekt/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unperfekt/unperfekt.git"
  },
  "author": "Martin Broder <hello@martinbroder.com> (https://martinbroder.com)",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "turbo run build",
    "check": "turbo run check",
    "dev": "turbo run dev --parallel --no-cache",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "preview": "turbo run preview --parallel",
    "release": "auto shipit",
    "test": "turbo run test"
  },
  "devDependencies": {
    "auto": "^10.32.6",
    "commitlint-config-unperfekt": "*",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier-config-unperfekt": "*",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
