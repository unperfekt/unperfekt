{
  "name": "unperfekt-monorepo",
  "private": true,
  "homepage": "https://github.com/unperfekt/unperfekt#readme",
  "bugs": {
    "url": "https://github.com/unperfekt/unperfekt/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unperfekt/unperfekt.git"
  },
  "author": {
    "name": "Martin Broder",
    "email": "hello@martinbroder.com",
    "url": "https://martinbroder.com"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "check": "turbo run check",
    "dev": "turbo run dev --parallel --no-cache",
    "lint": "turbo run lint",
    "msr": "node -r dotenv/config multi-semantic-release --dry-run --no-ci",
    "prepare": "husky install",
    "preview": "turbo run preview --paraallel",
    "release": "multi-semantic-release",
    "semantic-release": "semantic-release",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "^10.32.6",
    "@types/node": "^17.0.12",
    "auto": "^10.32.6",
    "commitlint": "^16.1.0",
    "commitlint-config-unperfekt": "workspace:^",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.2.0",
    "prettier-config-unperfekt": "workspace:^",
    "semantic-release-config-unperfekt": "workspace:^",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".svelte-kit/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  }
}
