{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "lib": ["DOM", "es2020"],
    "target": "ES2020",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "#utils/*": ["src/utils/*"],
      "#state/*": ["src/state/*"]
    }
  },
  "exclude": ["**/node_modules/*", "**/*.stories.svelte"],
  "extends": "tsconfig-unperfekt/svelte.json",
  "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte"]
}
